{{>partials/header}}
    {{#showAlert}}
     <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>{{Msg}}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/showAlert}}
{{>partials/menu}}
    <div class="register_div d-flex justify-content-center align-items-center">
        <form class="register_form d-flex" method="POST" action="{{action}}">
            <div class="row input_register">
            {{#emailField}}
                <div class="email_adress">
                    <h1>Email Adress<h1><br>
                    <input type="email" placeholder="Put your Email here" name="email">
                </div>
            {{/emailField}}
            {{#confirmationField}}
                <div class="confirmation_field">
                    <h1>Code Confirmation</h1><br>
                    <input type="text" placeholder="Ex: 986739123" name="codeConfirm">
                </div>
            {{/confirmationField}}
            {{#passwordField}}
                <div class="new_pass">
                    <h1>New Password</h1><br>
                    <input type="text" placeholder="Ex: 123456" name="newPass">
                </div>
            {{/passwordField}}
                <button class="submitNewPass" type="submit">{{status}}</button>
            </div>
            <div class="row image_newPass"></div>
        </form>
    <div>



    <script type="text/javascript" src="/js/bootstrap.bundle.min.js"></script>
    <script src="/menu.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>